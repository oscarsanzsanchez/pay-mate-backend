{
	"entryFile": "src/index.ts",
	"noImplicitAdditionalProperties": "throw-on-extras",
	"controllerPathGlobs": ["src/**/*.controller.ts"],
	"spec": {
		"outputDirectory": "dist",
		"specVersion": 3
	},
	"routes": {
		"middleware": "hapi",
		"routesDir": "src"
	},
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": {
			"dtos/*": ["dtos/*"]
		}
	}
}
